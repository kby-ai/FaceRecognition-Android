<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="About KBY-AI"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical | left"
        android:text=" KBY-AI offers SDKs for face recognition, liveness detection, and id document recognition.\n\n
Our expertise lies in machine learning, with a focus on computer vision technologies such as license plate recognition, super resolution, image segmentation, palm vein/print recognition, and object detection.\n\n
Our experienced team is skilled in developing deep learning products, improving their accuracy, and optimizing their speed on mobile and embedded devices.\n\n
We are actively seeking opportunities to develop machine learning technologies and also offer Android/iOS app development and web application development services.\n\n\n
Please contact us:"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">

    </TextView>

    <ImageView
        android:id="@+id/imageEmail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAbout"
        android:tint="@color/md_theme_dark_primary"
        app:srcCompat="@drawable/ic_email">
    </ImageView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Email: kby-ai@outlook.com"
        app:layout_constraintStart_toEndOf="@id/imageEmail"
        app:layout_constraintTop_toTopOf="@id/imageEmail"
        app:layout_constraintBottom_toBottomOf="@id/imageEmail"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageSkype"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageEmail"
        app:srcCompat="@drawable/ic_skype"></ImageView>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Skype: live:.cid.66e2522354b1049b"
        app:layout_constraintStart_toEndOf="@id/imageSkype"
        app:layout_constraintTop_toTopOf="@id/imageSkype"
        app:layout_constraintBottom_toBottomOf="@id/imageSkype"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageTelegram"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSkype"
        app:srcCompat="@drawable/ic_telegram"></ImageView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Telegram: kbyai"
        app:layout_constraintStart_toEndOf="@id/imageTelegram"
        app:layout_constraintTop_toTopOf="@id/imageTelegram"
        app:layout_constraintBottom_toBottomOf="@id/imageTelegram"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageWhatsApp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:tint="@color/md_theme_dark_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageTelegram"
        app:srcCompat="@drawable/ic_whatsapp"></ImageView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="WhatsApp: +19092802609"
        app:layout_constraintStart_toEndOf="@id/imageWhatsApp"
        app:layout_constraintTop_toTopOf="@id/imageWhatsApp"
        app:layout_constraintBottom_toBottomOf="@id/imageWhatsApp"
        >
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>